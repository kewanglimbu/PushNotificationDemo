<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PushNotificationDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.BackgroundColor="LightBlue"
    Shell.TitleColor="WhiteSmoke">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Button
                Margin="0,15,0,0"
                Background="LightBlue"
                Command="{Binding GetTokenClickedCommand}"
                FontSize="15"
                Text="Get Token"
                TextColor="white" />

            <Button
                Margin="0,8,0,0"
                Background="LightBlue"
                Command="{Binding SendMessageClickedCommand}"
                FontSize="15"
                Text="Send Message"
                TextColor="white" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
